<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with service name and status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_service_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Service Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PENDING"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/warning"
                android:background="@drawable/circle_background_light"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- Customer info -->
        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="8dp"
            android:drawableTint="@color/text_secondary" />

        <!-- Date and time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_booking_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:drawableStart="@drawable/ic_time"
                android:drawablePadding="8dp"
                android:drawableTint="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_booking_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="end" />

        </LinearLayout>

        <!-- Price -->
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_gravity="end"
            android:layout_marginBottom="12dp" />

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/btn_accept"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Accept"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_accept_background"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_reject"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Reject"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_reject_background"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Start"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_start_background"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_complete"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Complete"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_complete_background"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_view_details"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Details"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:background="@drawable/button_outline_background"
                android:gravity="center"
                android:paddingHorizontal="16dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
